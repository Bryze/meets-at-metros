<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reset_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_info"
    tools:context="com.example.raunak.justmetrothings.MainActivity">

    <include
        android:id="@+id/login_toolbar"
        layout="@layout/layout_toolbar"
        />

    <EditText
        android:layout_marginLeft="70dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="E-Mail"
        android:background="@drawable/shape"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:id="@+id/resetpass_email" />

    <TextView
        android:layout_marginLeft="40dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:text="Enter your Registered Email Id:"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/resetpass_email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="65dp" />

    <Button
        android:layout_marginLeft="70dp"
        android:text="SEND"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resetpass_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_custom"
        android:id="@+id/sendEmail" />
</RelativeLayout>
