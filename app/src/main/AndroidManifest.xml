<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.raunak.justmetrothings">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".MetroActivity"
            android:label="@string/METRO"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SocialMediaActivity"
            android:label="@string/SOCIAL_MEDIA"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".MetroMapActivity"
            android:label="DELHI METRO MAP "
            android:theme="@android:style/Theme.Holo.Light.Dialog.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:label="@string/PROFILE"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".Login1" />
        <activity android:name=".Register" />
        <activity android:name=".Login"></activity>
    </application>

</manifest>